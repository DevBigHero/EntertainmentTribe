<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_spacing_15_dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_common_white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_spacing_0.5_dp"
            android:background="@color/color_common_c6c6c6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_spacing_10_dp"
            android:paddingLeft="@dimen/common_spacing_15_dp"
            android:paddingRight="@dimen/common_spacing_15_dp"
            android:paddingTop="@dimen/common_spacing_15_dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_user_img"
                android:layout_width="@dimen/common_spacing_25_dp"
                android:layout_height="@dimen/common_spacing_25_dp"
                app:civ_border_width="0dp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_spacing_15_dp"
                android:text="我又皮痒了"
                android:textColor="@color/color_common_normal_font"
                android:textSize="@dimen/text_common_1_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="@dimen/common_spacing_15_dp"
            android:paddingRight="@dimen/common_spacing_15_dp"
            android:text="刚才～走路去维修站取我爷爷的轮椅，过红绿灯时见过路车辆稀少，玩心大发……坐在轮椅上慢慢的用手推着走，走到一半红灯了，lz前进也不是后退也不是，关键是一抬头，路两边都是车，都在等我过马路，囧的我跳下轮椅推着就跑～完全不顾身后一群人凌乱的目光……囧囧囧"
            android:textColor="@color/color_common_warm_font"
            android:textSize="@dimen/text_common_2_size" />

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_spacing_15_dp"
            android:layout_marginRight="@dimen/common_spacing_15_dp"
            android:layout_marginTop="@dimen/common_spacing_15_dp"
            android:background="@color/color_common_black"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_spacing_15_dp"
            android:paddingRight="@dimen/common_spacing_15_dp"
            android:paddingTop="@dimen/common_spacing_6_dp">

            <TextView
                android:id="@+id/tv_parise_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_spacing_15_dp"
                android:text="好笑 1111"
                android:textColor="@color/color_common_hint_font"
                android:textSize="@dimen/text_common_5_size" />

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论  23"
                android:textColor="@color/color_common_hint_font"
                android:textSize="@dimen/text_common_5_size" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_spacing_15_dp"
            android:paddingRight="@dimen/common_spacing_15_dp"
            android:paddingTop="@dimen/common_spacing_6_dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/common_spacing_5_dp"
                android:paddingTop="@dimen/common_spacing_4_dp"
                android:src="@drawable/ic_comment_label" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11111111"
                android:textColor="@color/color_common_warm_font"
                android:textSize="@dimen/text_common_3_size"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_spacing_0.5_dp"
            android:layout_marginTop="@dimen/common_spacing_15_dp"
            android:background="@color/color_common_c6c6c6" />
    </LinearLayout>
</LinearLayout>